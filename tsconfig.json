{
  "compilerOptions": {
    "target": "ESNext",                          // ⬅️ Modern target (was ES6)
    "module": "ESNext",                          // ⬅️ Already correct
    "lib": ["DOM", "DOM.Iterable", "ESNext"],    // ⬅️ Capitalized properly
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",               // ⬅️ Good for App Router + ESM
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,    // ⬅️ Recommended for all TS projects
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
